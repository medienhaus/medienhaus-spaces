{
  "name": "medienhaus-frontend",
  "private": true,
  "scripts": {
    "dev": "NEXT_TELEMETRY_DISABLED=1 next",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "NEXT_TELEMETRY_DISABLED=1 next start",
    "export": "NEXT_TELEMETRY_DISABLED=1 next build && NEXT_TELEMETRY_DISABLED=1 next export"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "i18next": "^23.7.7",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-resources-to-backend": "^1.2.0",
    "immer": "^10.0.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.314.0",
    "matrix-js-sdk": "^30.2.0",
    "next": "^14.0.4-canary.41",
    "normalize.css": "^8.0.1",
    "pino": "^8.16.2",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "styled-components": "^6.0.8",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "use-immer": "^0.9.0"
  },
  "devDependencies": {
    "@remixicons/react": "^1.0.0",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.3",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-matrix-org": "^0.8.0",
    "stylelint": "^14.8.2",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-webpack-plugin": "^3.2.0",
    "tailwindcss": "^3.4.1"
  },
  "eslintConfig": {
    "plugins": [
      "matrix-org"
    ],
    "extends": [
      "next",
      "plugin:matrix-org/javascript",
      "plugin:matrix-org/a11y",
      "plugin:matrix-org/react",
      "plugin:import/recommended"
    ],
    "env": {
      "es6": true
    },
    "rules": {
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "*",
          "next": "return"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "export"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "multiline-block-like"
        },
        {
          "blankLine": "always",
          "prev": "multiline-block-like",
          "next": "*"
        }
      ],
      "max-len": "off",
      "jsx-quotes": [
        "error",
        "prefer-double"
      ]
    },
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [
            [
              "@",
              "./"
            ]
          ],
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    }
  }
}
