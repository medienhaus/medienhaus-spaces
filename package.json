{
  "name": "medienhaus-frontend",
  "private": true,
  "scripts": {
    "dev": "NEXT_TELEMETRY_DISABLED=1 next",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "NEXT_TELEMETRY_DISABLED=1 next start",
    "export": "NEXT_TELEMETRY_DISABLED=1 next build && NEXT_TELEMETRY_DISABLED=1 next export"
  },
  "dependencies": {
    "i18next": "^23.5.1",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-resources-to-backend": "^1.1.4",
    "lodash": "^4.17.21",
    "matrix-js-sdk": "^28.2.0",
    "next": "^13.5.4",
    "normalize.css": "^8.0.1",
    "pino": "^8.15.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.2.2",
    "styled-components": "^6.0.8"
  },
  "devDependencies": {
    "@remixicons/react": "^1.0.0",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "eslint": "^8.11.0",
    "eslint-config-next": "^13.5.6",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-matrix-org": "^0.8.0",
    "stylelint": "^14.8.2",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-webpack-plugin": "^3.2.0"
  },
  "eslintConfig": {
    "plugins": [
      "matrix-org"
    ],
    "extends": [
      "next",
      "plugin:matrix-org/javascript",
      "plugin:matrix-org/a11y",
      "plugin:matrix-org/react",
      "plugin:import/recommended"
    ],
    "env": {
      "es6": true
    },
    "rules": {
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "*",
          "next": "return"
        },
        {
          "blankLine": "always",
          "prev": "return",
          "next": "*"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "multiline-block-like"
        },
        {
          "blankLine": "always",
          "prev": "multiline-block-like",
          "next": "*"
        }
      ],
      "max-len": "off",
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "import/no-named-as-default": "off"
    }
  }
}
