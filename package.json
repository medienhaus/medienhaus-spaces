{
  "name": "medienhaus-frontend",
  "private": true,
  "scripts": {
    "dev": "NEXT_TELEMETRY_DISABLED=1 next",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "NEXT_TELEMETRY_DISABLED=1 next start",
    "export": "NEXT_TELEMETRY_DISABLED=1 next build && NEXT_TELEMETRY_DISABLED=1 next export"
  },
  "dependencies": {
    "i18next": "^22.4.15",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-resources-to-backend": "^1.0.0",
    "lodash": "^4.17.21",
    "matrix-js-sdk": "^25.0.0",
    "next": "^13.3.4",
    "normalize.css": "^8.0.1",
    "pino": "^8.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.2.2",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/eslint-plugin": "^7.17.7",
    "@next/eslint-plugin-next": "^13.3.4",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "babel-plugin-styled-components": "^2.0.6",
    "eslint": "^8.11.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-matrix-org": "^0.8.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "stylelint": "^14.8.2",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-webpack-plugin": "^3.2.0"
  },
  "eslintConfig": {
    "plugins": [
      "matrix-org"
    ],
    "extends": [
      "plugin:matrix-org/babel",
      "plugin:matrix-org/react",
      "plugin:@next/next/recommended"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "*",
          "next": "return"
        },
        {
          "blankLine": "always",
          "prev": "return",
          "next": "*"
        }
      ],
      "max-len": "off",
      "jsx-quotes": [
        "error",
        "prefer-double"
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "overrides": [
      {
        "files": [
          "./*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
