{
  "name": "medienhaus-frontend",
  "private": true,
  "scripts": {
    "dev": "NEXT_TELEMETRY_DISABLED=1 next",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "NEXT_TELEMETRY_DISABLED=1 next start",
    "export": "NEXT_TELEMETRY_DISABLED=1 next build && NEXT_TELEMETRY_DISABLED=1 next export"
  },
  "dependencies": {
    "i18next": "^23.7.7",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-resources-to-backend": "^1.2.0",
    "immer": "^10.0.3",
    "lodash": "^4.17.21",
    "matrix-js-sdk": "^30.2.0",
    "next": "^14.0.4-canary.41",
    "normalize.css": "^8.0.1",
    "pino": "^8.16.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "styled-components": "^6.0.8",
    "use-immer": "^0.9.0"
  },
  "devDependencies": {
    "@remixicons/react": "^1.0.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-matrix-org": "^1.2.1",
    "prettier": "^3.2.4"
  },
  "eslintConfig": {
    "plugins": [
      "matrix-org"
    ],
    "extends": [
      "next",
      "plugin:matrix-org/javascript",
      "plugin:matrix-org/a11y",
      "plugin:matrix-org/react",
      "plugin:import/recommended"
    ],
    "env": {
      "es6": true
    },
    "rules": {
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "*",
          "next": "return"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "export"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "multiline-block-like"
        },
        {
          "blankLine": "always",
          "prev": "multiline-block-like",
          "next": "*"
        }
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  }
}
